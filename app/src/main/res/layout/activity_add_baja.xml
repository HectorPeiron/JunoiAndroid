<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.Baja.AddBajaView">

    <!-- TextInputLayout para manejar mejor la entrada de texto y estilos -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFechaBaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fecha_baja_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:endIconDrawable="@drawable/ic_calendar"
        app:endIconMode="custom"
        app:endIconContentDescription="@string/fecha_baja_end_icon_description">

        <EditText
            android:id="@+id/etFechaBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:drawablePadding="8dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cantidad_hint"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerTipoBaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGuardarBaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/guardar_baja_button" />

    <Button
        android:id="@+id/btnVerGraficas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_graficas_button"
        android:layout_marginTop="16dp" />
</LinearLayout>
