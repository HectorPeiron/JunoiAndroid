<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvCrianzaFechas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crianza_fechas"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/layoutCrianzaDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvAnimales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animales"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutAnimales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/tvCompras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compras"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/tvBajas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bajas"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <LinearLayout
            android:id="@+id/layoutBajas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartBajas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />
    </LinearLayout>
</LinearLayout>
