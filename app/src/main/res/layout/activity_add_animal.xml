<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.Animal.AddAnimalView">

    <EditText
        android:id="@+id/etNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NÃºmero"
        android:inputType="number" />

    <EditText
        android:id="@+id/etSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sexo" />

    <EditText
        android:id="@+id/etPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerTipoAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnGuardarAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Animal"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnVerAnimales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver animales crianza"
        android:layout_marginTop="16dp" />

</LinearLayout>
