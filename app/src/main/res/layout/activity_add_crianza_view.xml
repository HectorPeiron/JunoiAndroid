<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.tfgjunio.view.Crianza.AddCrianzaView">

    <TextView
        android:id="@+id/tvCrianzaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crianza Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btnCrianzaAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crianza Animal"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCrianzaCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crianza Compra"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCrianzaVeterinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crianza Veterinario"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCrianzasAnteriores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANTERIORES CRIANZAS"
        android:layout_marginTop="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnIniciarCrianza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Crianza"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnFinalizarCrianza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizar Crianza"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"/>
    </RelativeLayout>

</LinearLayout>
